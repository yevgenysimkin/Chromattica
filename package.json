{
  "name": "chromattica",
  "productName": "Chromattica [beta]",
  "version": "1.1.0-beta",
  "description": "Multi-profile Google account manager with isolated browser sessions",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": {
    "name": "Yevgeny Simkin",
    "email": "info@aflatminor.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "electron-updater": "^6.7.3"
  },
  "build": {
    "appId": "com.chromattica.app",
    "productName": "Chromattica [beta]",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "yevgenysimkin",
      "repo": "Chromattica"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "src/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "src/icons/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "src/icons/icon.png",
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
